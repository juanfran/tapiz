{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/test-setup.ts",
    "**/test-helpers.ts"
  ],
  "include": ["**/*.ts"]
}
