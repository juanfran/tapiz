{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "esnext",
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@team-up/api/*": ["apps/api/src/*"],
      "@team-up/board-commons": ["libs/board-commons/src/index.ts"],
      "@team-up/board-commons/*": ["libs/board-commons/src/lib/*"],
      "@team-up/cdk/*": ["libs/cdk/src/lib/*"],
      "@team-up/nodes/*": ["libs/nodes/src/lib/*"],
      "@team-up/sync-node-box": ["libs/sync-node-box/src/index.ts"],
      "@team-up/ui/*": ["libs/ui/src/lib/*"],
      "@team-up/board-components/*": ["libs/board-components/src/lib/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
